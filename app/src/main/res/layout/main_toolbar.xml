<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/toolbar_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:id="@+id/toolbar_textview"
            android:layout_toEndOf="@id/toolbar_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Main"
            android:maxWidth="140dp"
            android:fontFamily="@font/font"/>

        <ImageView
            android:id="@+id/toolbar_add_card_icon"
            android:layout_toStartOf="@id/toolbar_add_folder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/add_image_v2"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:id="@+id/toolbar_add_folder_icon"
            android:layout_toStartOf="@id/show_sentence_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/add_folder_v2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:id="@+id/show_sentence_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/cards"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"/>


    </RelativeLayout>

</RelativeLayout>